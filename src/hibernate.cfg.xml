<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="session">
  <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="hibernate.connection.password">massilia</property>
  <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/java_j2e</property>
  <property name="hibernate.connection.username">root</property>
  <property name="show_sql">true</property>
  <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="hibernate.search.autoregister_listeners">false</property>
  <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
  <property name="hibernate.enable_lazy_load_no_trans">true</property>
  <mapping resource="com/pharmasociale/models/Don.hbm.xml"/>
  <mapping resource="com/pharmasociale/models/Admin.hbm.xml"/>
  <mapping resource="com/pharmasociale/models/Medicament.hbm.xml"/>
  <mapping resource="com/pharmasociale/models/Pharmacie.hbm.xml"/>
  <mapping resource="com/pharmasociale/models/DonAttribue.hbm.xml"/>
  <mapping resource="com/pharmasociale/models/Donnateur.hbm.xml"/>
  <mapping resource="com/pharmasociale/models/LigneDon.hbm.xml"/>
  <mapping resource="com/pharmasociale/models/LigneDonAttribue.hbm.xml"/>
  <mapping resource="com/pharmasociale/models/Pharmacien.hbm.xml"/>
  <mapping resource="com/pharmasociale/models/Beneficiaire.hbm.xml"/>
  <mapping resource="com/pharmasociale/models/Utilisateur.hbm.xml"/>
 </session-factory>
</hibernate-configuration>
