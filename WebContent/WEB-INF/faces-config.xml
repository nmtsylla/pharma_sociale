<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"  version="2.2">
	<application>
		<locale-config>
			<supported-locale>fr_FR</supported-locale>
		</locale-config>
		
		<resource-bundle>
            <base-name>org.primefaces.examples.build</base-name>
            <var>build</var>
        </resource-bundle>
	</application>
	
	<managed-bean>
	    <managed-bean-name>loginBean</managed-bean-name>
	    <managed-bean-class>
	      com.pharmasociale.beans.Login
	    </managed-bean-class>
	    <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
	    <managed-bean-name>utilisateurBean</managed-bean-name>
	    <managed-bean-class>
	      com.pharmasociale.beans.UtilisateurBean
	    </managed-bean-class>
	    <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
	    <managed-bean-name>adminBean</managed-bean-name>
	    <managed-bean-class>
	      com.pharmasociale.beans.AdminBean
	    </managed-bean-class>
	    <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
	    <managed-bean-name>medicamentBean</managed-bean-name>
	    <managed-bean-class>
	      com.pharmasociale.beans.MedicamentBean
	    </managed-bean-class>
	    <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
  
   <managed-bean>
        <managed-bean-name>menuBean</managed-bean-name>
        <managed-bean-class>org.primefaces.examples.view.MenuBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
   </managed-bean>
   
    <managed-bean>
        <managed-bean-name>themeSwitcherBean</managed-bean-name>
        <managed-bean-class>org.primefaces.examples.view.ThemeSwitcherBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>gp</property-name>
            <value>#{guestPreferences}</value>
        </managed-property>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>defaultCommandBean</managed-bean-name>
        <managed-bean-class>org.primefaces.examples.view.DefaultCommandBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
	<navigation-rule>
		<from-view-id>/templates/login.xhtml</from-view-id>
		<navigation-case>
		<from-action>#{loginBean.validateUsernamePassword}</from-action>
		<from-outcome>true</from-outcome>
		<to-view-id>/templates/welcome.xhtml</to-view-id>
	</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/templates/welcome.xhtml</from-view-id>
		<navigation-case>
		<from-action>#{utilisateurBean.addUtilisateur}</from-action>
		<from-outcome>true</from-outcome>
		<to-view-id>/templates/welcome.xhtml</to-view-id>
	</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/templates/welcome.xhtml</from-view-id>
		<navigation-case>
		<from-action>#{medicamentBean.addMedicament}</from-action>
		<from-outcome>true</from-outcome>
		<to-view-id>/templates/welcome.xhtml</to-view-id>
	</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/templates/welcome.xhtml</from-view-id>
		<navigation-case>
		<from-action>#{medicamentBean.addAdmin}</from-action>
		<from-outcome>true</from-outcome>
		<to-view-id>/templates/welcome.xhtml</to-view-id>
	</navigation-case>
	</navigation-rule>
	
</faces-config>
